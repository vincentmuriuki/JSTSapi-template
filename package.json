{
  "name": "ts-api-boilerplate",
  "version": "1.0.0",
  "description": "a typescript template for ts API's",
  "main": "app.ts",
  "repository": "https://github.com/vincentmuriuki/api-template.git",
  "author": "Vincent <vincentmuriuki42@gmail.com>",
  "license": "MIT",
  "scripts": {
    "watch": "nodemon ./src/app.ts",
    "build": "tsc",
    "start": "node -r dotenv/config build/app.js",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint-fix": "eslint --fix ./src/** --ext .ts --ext .js",
    "start:prod": "node -r dotenv/config ./build/app.js",
    "winston": "babel ./src/utils/winston.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migrate": "node ./src/scripts/migrate"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^6.0.0",
    "lodash.merge": "^4.6.2",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.11",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
